{% extends 'base.html.twig' %}

{% block title %}Connexion !
{% endblock %}

{% block body %}
	<div class="min-h-screen flex items-center justify-center bg-gray-100">
		<div class="bg-white p-6 rounded-lg shadow-lg w-96">
			<div class="mb-4 text-center">
				<h1 class="h3 mb-3 font-bold">Merci de vous connecter</h1>
				<!-- Ici, ajoutez votre illustration générée -->
			</div>

			<form method="post">
				{% if error %}
					<div class="bg-red-500 text-white p-3 rounded mb-2">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3 text-center">
						Bonjour
						{{ app.user.userIdentifier }},
						<a href="{{ path('app_logout') }}" class="text-blue-500 hover:text-blue-700">Déconnexion</a>
					</div>
				{% endif %}

				<div class="mb-4">
					<label for="identifier" class="block text-sm font-medium text-gray-600">Pseudo ou Email:</label>
					<input type="text" value="{{ last_username }}" name="identifier" id="identifier" class="mt-1 p-2 w-full border rounded-md" required autofocus>
				</div>
				<div class="mb-4">
					<label for="inputPassword" class="block text-sm font-medium text-gray-600">Mot de passe</label>
					<input type="password" name="motPasse" id="inputPassword" class="mt-1 p-2 w-full border rounded-md" autocomplete="current-motPasse" required>
				</div>
				<div class="mb-4">
					<label class="flex items-center">
						<input type="checkbox" name="_remember_me" class="form-checkbox text-indigo-600">
						<span class="ml-2">Se souvenir de moi</span>
					</label>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<button class="w-full py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" type="submit">
					Se connecter
				</button>
			</form>
		</div>
	</div>
{% endblock %}




