<form method="post" action="{{ path('app_sortie_delete', {'id': sortie.id}) }}" onsubmit="return confirm('Etes vous sure de vouloir supprimer cette sortie');" class="inline-block">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sortie.id) }}">
	<button class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 focus:outline-none transition duration-150 ease-in-out">Supprimer la sortie</button>
</form>

